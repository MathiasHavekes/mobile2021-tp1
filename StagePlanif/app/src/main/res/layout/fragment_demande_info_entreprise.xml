<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoEntrepriseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="32dp">

        <Spinner
            android:id="@+id/spinner_entreprise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/text_adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/adresse_entreprise"
            android:inputType="text"
            android:autofillHints="@string/adresse_entreprise" />

        <EditText
            android:id="@+id/texte_ville"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/ville_entreprise"
            android:inputType="text"
            android:autofillHints="@string/ville_entreprise" />

        <EditText
            android:id="@+id/text_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/code_postale_entreprise"
            android:inputType="text"
            android:autofillHints="@string/code_postale_entreprise" />

        <EditText
            android:id="@+id/text_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/province_entreprise"
            android:inputType="text"
            android:autofillHints="@string/province_entreprise" />
    </LinearLayout>
</ScrollView>